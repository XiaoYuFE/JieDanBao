      <view class='name'>3.设计方案</view>
      <view class='time-finsh' wx-if="{{(dataInfo.dsj==1 || sjFinshTime) && !radioVal}}">完成时间：{{sjFinshTime || dataInfo.sj_time}}</view>
      <view class='cell-radio-box' wx-if="{{dataInfo.dsj==0}}">
        <radio-group class='radio-group {{dataInfo.dlf==0 ? "disabled" :""}}' bindchange="radioChange">
          <label class="radio">
            <radio value="1" disabled='{{dataInfo.dlf==0 ? "disabled" :""}}' color="#fff" />已完成
          </label>
