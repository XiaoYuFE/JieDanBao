            <radio value='0' class='disabled' checked disabled='{{dataInfo.dlf==0 ? "disabled" :""}}' color="#fff" />未完成
          </label>
        </radio-group>
      </view>

      <view class='time-remain clearfix' wx-if="{{dataInfo.dsj==0 && dataInfo.dlf==1 && radioVal==0}}">
        <text class='lab'>{{dataInfo.sj_d_time >=0 ? "剩余时间" :"已超时"}}：</text>
        <view class='timing-count'>{{wxTimerList["wxTimer"].formatHour}}时{{wxTimerList["wxTimer"].formatMinute}}分{{wxTimerList["wxTimer"].formatSecond}}秒</view>
        <text class='iconfont icon-tishi icon-cpic'></text>
      </view>

      <view class='uploadgallery-wrap' wx-if="{{dataInfo.dlf==1 && dataInfo.dsj==0 && radioVal==1}}">
