    <view class='item-cell'>

      <view class='name'>4.合同签约</view>
      <view class='time-finsh' wx-if="{{dataInfo.dqy==1}}">完成时间：{{dataInfo.ht_time}}</view>
      <view class='agree-price' wx-if="{{dataInfo.dqy==1}}">合同金额：{{dataInfo.ht_price}}元</view>
      <text class='txt-statu success-top' wx-if="{{dataInfo.dqy==1}}">已完成</text>
      <view class='cell-radio-box' wx-if="{{dataInfo.dqy==0}}">
        <radio-group class='radio-group {{dataInfo.dsj==0 ? "disabled" :""}}' bindchange="radioChange">
          <label class="radio">
            <radio value="1" disabled='{{dataInfo.dsj==0 ? "disabled" :""}}' color="#fff" />已完成
          </label>
          <label class="radio">
            <radio value="0" disabled='{{dataInfo.dsj==0 ? "disabled" :""}}' checked color="#fff" />未完成
          </label>
        </radio-group>
      </view>
      <view class="uploadgallery-wrap" wx-if="{{dataInfo.dsj==1 && dataInfo.dqy==0 && radioVal==1}}">
        <view class='uploadgallery'>
          <view class='lab'>合同图片</view>
          <view class='uploadgallery-list clearfix'>
            <view class='pic' wx:for="{{ht_img}}" wx:key="id" wx:for-index="idx" wx:for-item="item">
