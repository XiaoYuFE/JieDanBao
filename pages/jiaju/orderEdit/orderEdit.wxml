<view class="header-top">
  <text class='tit'>订单流程</text>
  <text class='tip'>为了保证派单量，请及时更新订单</text>
  <navigator url='/pages/jiaju/orderStop/orderStop?id={{id}}&step={{step}}&stepname={{stepName}}' class='server-stop'>
    <text class='iconfont icon-gantanhao icon-cpic'></text>终止服务</navigator>
</view>


<form bindsubmit="formSubmit">
 <input type='text' name="step" class='ipt-hidden' value='{{step}}'></input>
 <input type='text' name="id" class='ipt-hidden' value='{{id}}'></input>
  <view class='orderstep-list'>
    <view class='item-cell'>
      <view class='name'>1.接单</view>

      <view class='time-finsh' wx-if="{{dataInfo.wjd==1}}">完成时间：{{dataInfo.receive_time}}</view>
      <text class='txt-statu success' wx-if="{{dataInfo.wjd==1}}">已完成</text>
      <view class='cell-radio-box' wx-if="{{dataInfo.wjd==0}}">
        <radio-group class="radio-group" bindchange="radioChange">
          <label class="radio">
            <radio value="1" color="#fff" />已完成
          </label>
          <label class="radio">
            <radio value="0" checked="true" color="#fff" />未完成
          </label>
        </radio-group>
      </view>
    </view>
    <!--  上门量房  客户在未接单的时候 该步骤 就要显示radio 不可点击状态 -->
    <!-- 上门量房完成后  raido 不现实  -->
    <view class='item-cell'>
      <view class='name'>2.上门量房</view>
      <view class='time-finsh' wx-if="{{dataInfo.dlf==1}}">完成时间：{{dataInfo.l_time}}</view>
      <view class='cell-radio-box' wx-if="{{dataInfo.dlf==0}}">
        <radio-group class='radio-group {{dataInfo.wjd==0 ? "disabled" :""}}' bindchange="radioChange">
          <label class="radio">
            <radio value="ylf" disabled='{{dataInfo.wjd==0 ? "disabled" :""}}'  color="#fff" />已完成
          </label>
          <label class="radio">
            <radio value="dlf" disabled='{{dataInfo.wjd==0 ? "disabled" :""}}' checked="true" color="#fff" />未完成
          </label>
        </radio-group>
      </view>
      <view class='cell-lf-time clearfix' wx-if="{{dataInfo.wjd==1 && dataInfo.dlf==0}}">
        <text class='lab'>量房时间</text>
        <view class='time-picker'>
          <picker class='{{!lfTime ? "hidden" :""}}' mode="multiSelector" value="{{dateTime1}}" bindchange="changeDateTime1" bindcolumnchange="changeDateTimeColumn1" range="{{dateTimeArray1}}">
            <view class="tui-picker-detail">
              {{dateTimeArray1[0][dateTime1[0]]}}-{{dateTimeArray1[1][dateTime1[1]]}}-{{dateTimeArray1[2][dateTime1[2]]}} {{dateTimeArray1[3][dateTime1[3]]}}:{{dateTimeArray1[4][dateTime1[4]]}}:{{dateTimeArray1[5][dateTime1[5]]}}
            </view>

          </picker>
          <!--  -->
          <input type='text' name="time" value='{{lfTime}}' wx-if="{{dataInfo.wjd==1 && dataInfo.dlf==0}}" class='ipt-text-lf {{lfTime ? "hidden" :""}}' placeholder='{{radioVal=="dlf" ? "请设置上门量房的时间" :"请设置完成量房的时间"}}'></input>
          <text class='iconfont icon-jiantou txt-arrow'></text>
        </view>

      </view>

      <text class='txt-statu success' wx-if="{{dataInfo.dlf==1}}">已完成</text>
    </view>

