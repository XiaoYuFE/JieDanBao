  font-size: 28rpx;
}

radio-group .radio {
  position: relative;
  padding-left: 55rpx;
  margin-left: 25rpx;
}

radio .wx-radio-input {
  border-radius: 50%;
  width: 42rpx;
  height: 42rpx;
  box-sizing: border-box;
  border: 2rpx solid #cacaca;
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translate(0, -50%);
  transform: translate(0, -50%);
}

radio-group.disabled .radio {
  color: #999;
}

radio-group.disabled .radio .wx-radio-input {
  background: #e1e1e1;
  border-color: #cacaca;
}

radio-group.disabled radio .wx-radio-input.wx-radio-input-checked::before {
  color: #e1e1e1;
  border-color: #cacaca;
}

radio .wx-radio-input.wx-radio-input-checked::before {
  content: "\e600";
  font-family: "iconfont";
  font-size: 48rpx;
  color: #3ac6b8;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
}

