<view class='fixed-bottom-handler {{isIpx ? "device-ipx" :""}}'  wx:if="{{isSfShow}}">
  <form bindsubmit="formSubmit">
    <view class='soma-hd'>请选择相对应的进度</view>
    <view class='soma-bd'>
   
        <view class='item-list clearfix'>
          <text wx:for="{{stepTextRemain}}" data-step="{{stepKeyRemain[idx]}}"  wx:for-index="idx" wx:for-item="item" bindtap="changeStep" class="{{currStepKey==stepKeyRemain[idx] ? 'active' :''}}">{{item}}</text>
        </view>
        <input type='text' class='ipt-hidden'  name="id" value='{{order.id}}'></input>
        <input type='text' class='ipt-hidden'  name="step" value='{{currStepKey}}'></input>
        <textarea maxlength="-1" name="content"  bindinput='markContent' class='ipt-textarea'></textarea>
    </view>
    <view class='ipt-submit-wrap'><button class='btn-submit' disabled='{{isValidStep || tArea ? "":"disabled"}}' form-type="submit">提交</button></view>
  </form>
</view>
<view class='fixed-bottom-handler-mask' bindtap='closeDialog' wx:if="{{isSfShow}}"></view>
<view class='fixed-bottom-button' wx:if="{{order.step !='ywg' &&  order.step != 'void'}}"><view class='btn' bindtap='updateStep'>更新订单进度</view></view>

