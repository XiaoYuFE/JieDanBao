/**app.wxss**/
@import "/static/css/iconfont/iconfont.wxss";
page{
   font-family: -apple-system-font, 'Helvetica Neue', Helvetica, 'Microsoft YaHei', sans-serif;
}
.container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
} 

.clearfix:after{
    content:"";
    display:table;
    clear:both
}



.coms-downrefresh-loading{
  text-align:center; 
}
.coms-downrefresh-loading .k-line {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 100%;
  background-color: #4b9cdb;
  margin:0 5rpx; 
}

.coms-downrefresh-loading .k-line-1 {
  animation: k-loadingC 0.8s 0.6s linear infinite;
  background-color: #bdbdbd;
}

.coms-downrefresh-loading .k-line-2 {
  animation: k-loadingC 0.8s 0.45s linear infinite;
  background-color: #9e9e9e;
}

.coms-downrefresh-loading .k-line-3 {
  animation: k-loadingC 0.8s 0.3s linear infinite;
  background-color: #757575;
}

.coms-downrefresh-loading .k-line-4 {
  animation: k-loadingC 0.8s 0.15s linear infinite;
  background-color: #616161;
}
@keyframes k-loadingC {
  0%{
    transform:translate(0,0);
  }
  50% {
    transform: translate(0, 15px);
  }
  100% {
    transform: translate(0, 0);
  }
}


